<% @card.each do |card| %>
  <div class="bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700">
    <figure>
      <%= link_to "#{@path}/show?id=#{card.id}" do %>
        <% if card.image.attached? %>
            <%= image_tag card.image, class: 'w-full h-48 object-cover rounded-lg', alt: 'サムネイル画像' %>
        <% else %>
            <%= image_tag "/assets#{@path}/#{card.id}.jpg", class: 'w-full h-48 object-cover rounded-t-lg', alt: 'サムネイル画像' %>
        <% end %>
      <% end %>
    </figure>
    <div class="p-5">
      <h5 class="h-14 mb-2 text-xl font-bold text-gray-900 dark:text-white line-clamp-2"><%= card.title %></h5>
      <p class="mb-3 font-normal text-gray-700 dark:text-gray-400 line-clamp-2"><%= card.description %></p>
      <%= link_to "#{@path}/show?id=#{card.id}", class: 'inline-flex items-center px-3 py-2 text-sm font-medium text-center rounded-lg bg-yellow-300  hover:bg-yellow-400 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800' do %>
        詳細
        <svg class="rtl:rotate-180 w-3.5 h-3.5 ms-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9"/>
        </svg>
      <% end %>
    </div>
  </div>
<% end %>
