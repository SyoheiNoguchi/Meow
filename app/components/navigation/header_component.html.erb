<header class="sticky top-0 bg-white bg-opacity-50">
  <nav class="mx-auto flex max-w-7xl items-center justify-between p-6 lg:px-8" aria-label="Global">
    <div class="flex lg:flex-1">
      <%= link_to root_path do %>
        <span class="sr-only">CatHotWire</span>
        <%= image_tag '/assets/icon_cat.png', class: 'h-11' %>
      <% end %>
    </div>

    <div class="flex lg:hidden">
      <button id="sideMenuOpenBtn" type="button" class="inline-flex items-center justify-center rounded-md p-2.5 text-gray-700">
        <span class="sr-only">Open main menu</span>
        <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
        </svg>
      </button>
    </div>

    <div class="hidden lg:flex lg:gap-x-12">
      <%= link_to 'News', news_index_path, class: "#{ 'border-b-2 border-yellow-300' if @current_path.include?('news') } text-sm font-semibold leading-6 text-gray-900" %>
      <%#= link_to 'Rescue', rescude_cats_index_path, class: "#{ 'border-b-2 border-yellow-300' if @current_path.include?('rescude')} text-sm font-semibold leading-6 text-gray-900" %>
      <%= link_to 'Contact', new_contact_path, class: "#{ 'border-b-2 border-yellow-300' if @current_path.include?('contact')} text-sm font-semibold leading-6 text-gray-900" %>
      <% if helpers.user_signed_in? %>
        <%= link_to 'Admin', admin_admins_path, class: "text-sm font-semibold leading-6 text-gray-900", target: "_blank" %>
      <% end %>
    </div>

    <div class="hidden lg:flex lg:flex-1 lg:justify-end">
      <% if helpers.user_signed_in? %>
        <%= link_to "ログアウト", destroy_user_session_path, class: "text-sm font-semibold leading-6 text-gray-900", method: :delete %>
      <% else %>
        <%= link_to "新規登録", new_user_registration_path, class: "text-sm font-semibold leading-6 text-gray-900 mr-4" %>
        <%= link_to "ログイン", new_user_session_path, class: "text-sm font-semibold leading-6 text-gray-900" %>
      <% end %>
    </div>
  </nav>

  <!-- Mobile menu, show/hide based on menu open state. -->
  <div id="sideMenu" class="hidden" role="dialog" aria-modal="true">
    <!-- Background backdrop, show/hide based on slide-over state. -->
    <div class="fixed inset-0 z-10"></div>
    <div class="fixed inset-y-0 right-0 z-10 w-full overflow-y-auto bg-white p-6 sm:max-w-sm sm:ring-1 sm:ring-gray-900/10">
      <div class="flex items-center justify-end">
        <button id="sideMenuCloseBtn" type="button" class="rounded-md p-2.5 text-gray-700">
          <span class="sr-only">Close menu</span>
          <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
      <div class="mt-6 flow-root">
        <div class="-my-6 divide-y divide-gray-500/10">
          <div class="py-6">
            <%= link_to 'News', news_index_path, class: 'block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-50' %>
            <%#= link_to 'Rescue', rescude_cats_index_path, class: 'block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-50' %>
            <%= link_to 'Contact', new_contact_path, class: 'block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-50' %>
            <% if helpers.user_signed_in? %>
              <%= link_to 'Admin', admin_admins_path, class: "block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-50" %>
            <% end %>
          </div>
          <div class="py-6">
            <% if helpers.user_signed_in? %>
              <%= link_to "ログアウト", destroy_user_session_path, class: "block rounded-lg px-3 py-2.5 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-50", method: :delete %>
            <% else %>
              <%= link_to "新規登録", new_user_registration_path, class: "block rounded-lg px-3 py-2.5 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-50" %>
              <%= link_to "ログイン", new_user_session_path, class: "block rounded-lg px-3 py-2.5 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-50" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>
