<div class="max-w-xl m-auto">
  <h1>パスワードを忘れた方</h1>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'shadow-md rounded px-8 pt-6 pb-8 mb-14' }) do |f| %>
    <%= render(Utility::ErrorMessagesComponent.new(model: f.object)) %>

    <div class="mb-4">
      <%= render(Form::LabelComponent.new(form: f, name: :email, title: 'メールアドレス', id: 'email')) %>
      <%= render(Form::EmailInputComponent.new(form: f, name: :email, id: 'email', placeholder: 'nekoneko@neko.com')) %>
    </div>

    <div class="flex justify-end">
      <%= f.submit '送信', class: "bg-blue-500 hover:bg-blue-700 text-white py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
    </div>
  <% end %>
  
  <div class="flex flex-col justify-center items-center [&_a]:mb-4">
    <%= render "devise/shared/links" %>
  </div>
</div>
